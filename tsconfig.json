{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "preserveConstEnums": true,
        "removeComments": false,
        "sourceMap": false,
        "experimentalDecorators": true,
        "noEmitOnError": true,
        "outDir": "./build",
        "declaration": false,
        "typeRoots": [
            "node_modules/@types"
        ],
        "forceConsistentCasingInFileNames": true
    },
    "awesomeTypescriptLoaderOptions": {
        "useWebpackText": true,
        "useCache": true,
        "cacheDirectory": ".buildCache/awcache",
        "forceIsolatedModules": true
    },
    "exclude": [
        "node_modules",
        "build",
        "compilation",
        "src/menu",
        "src/mw",
        "src/**/site"
    ],
    "filesGlob": [
        "src/**/*.ts"
    ]
}